<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Admin | Euduka</title>
    <style>
        :root {
            --primary: #ffd700;
            --premium-bg: #fffbf0;
            --waiting-bg: #f0f7ff;
            --danger: #ff4d4d;
            --text: #333;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 20px;
            color: var(--text);
        }

        .container {
            max-width: 1100px;
            margin: auto;
            background: white;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        }

        /* Stats Cards */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            padding: 20px;
            border-radius: 15px;
            border: 1px solid #eee;
            text-align: center;
            transition: transform 0.2s;
        }

        .stat-card:hover {
            transform: translateY(-5px);
        }

        .stat-card h3 {
            margin: 0;
            font-size: 0.9rem;
            color: #666;
            text-transform: uppercase;
        }

        .stat-card .value {
            font-size: 2rem;
            font-weight: bold;
            margin: 10px 0;
            color: var(--text);
        }

        .stat-card.waiting {
            border-left: 5px solid #007bff;
        }

        .stat-card.premium {
            border-left: 5px solid var(--primary);
        }

        /* Search & Filter */
        .controls {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }

        .search-box {
            flex: 1;
            min-width: 250px;
            position: relative;
        }

        .search-box input {
            width: 100%;
            padding: 12px 15px;
            border-radius: 10px;
            border: 1px solid #ddd;
            outline: none;
            font-size: 1rem;
        }

        .filter-box select {
            padding: 12px 15px;
            border-radius: 10px;
            border: 1px solid #ddd;
            outline: none;
            background: white;
            cursor: pointer;
        }

        /* Table Styles */
        table {
            border-collapse: collapse;
            width: 100%;
            overflow: hidden;
            border-radius: 10px;
            margin-top: 10px;
        }

        thead td {
            font-weight: bold;
            padding: 15px;
            background-color: #f1f3f5;
            color: #495057;
            text-transform: uppercase;
            font-size: 0.8rem;
        }

        tr {
            border-bottom: 1px solid #eee;
            transition: background 0.2s;
        }

        tr.premium-row {
            background-color: var(--premium-bg);
        }

        tr.waiting-row {
            background-color: var(--waiting-bg);
        }

        tr:hover {
            background-color: #f8f9fa;
        }

        td {
            padding: 15px;
            vertical-align: middle;
        }

        .badge {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: bold;
            display: inline-block;
        }

        .badge-basic {
            background: #e9ecef;
            color: #495057;
        }

        .badge-premium {
            background: var(--primary);
            color: #000;
        }

        .badge-waiting {
            background: #007bff;
            color: white;
        }

        .badge-attente-premium {
            background: #ffa500;
            color: #333;
        }

        .badge-non-verifie {
            background: #6c757d;
            color: white;
        }

        .actions-cell {
            display: flex;
            gap: 12px;
            align-items: center;
        }

        .btn-icon {
            cursor: pointer;
            border: none;
            background: none;
            padding: 5px;
            border-radius: 5px;
            transition: background 0.2s;
        }

        .btn-icon:hover {
            background: #eee;
        }

        .btn-delete svg {
            fill: var(--danger);
        }

        .btn-details img {
            width: 22px;
        }

        .logout-btn {
            position: absolute;
            top: 20px;
            right: 20px;
            padding: 10px 20px;
            background: #333;
            color: white;
            border-radius: 10px;
            text-decoration: none;
            font-weight: bold;
        }

        /* Modal Styles */
        .menu-more {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 320px;
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.2);
            border-radius: 20px;
            padding: 25px;
            background-color: white;
            z-index: 11002;
        }

        .menu-more-close {
            text-align: right;
            cursor: pointer;
            font-size: 1.5rem;
        }

        .details h2 {
            margin: 10px 0;
            font-size: 1.2rem;
        }

        .show-img {
            width: 100%;
            border-radius: 10px;
            margin: 15px 0;
            border: 1px solid #ddd;
        }

        .devenir-premium {
            background: var(--primary);
            padding: 12px;
            text-align: center;
            border-radius: 10px;
            cursor: pointer;
            font-weight: bold;
        }

        .modal-confirm-delete {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 11003;
        }

        #empty-results {
            text-align: center;
            padding: 40px;
            color: #999;
            display: none;
        }
    </style>
</head>

<body>
    <a href="#" class="logout-btn" onclick="document.getElementById('admin-login-overlay').remove()">Fermer</a>

    <div class="container">
        <h1>Euduka Dashboard</h1>

        <% const total=eleves.length; const premiums=eleves.filter(e=> e.role === 'premium').length;
            const enAttente = eleves.filter(e => e.role !== 'premium' && e.premiumRequest).length;
            %>

            <div class="stats-grid">
                <div class="stat-card">
                    <h3>Total √âl√®ves</h3>
                    <div class="value">
                        <%= total %>
                    </div>
                </div>
                <div class="stat-card waiting">
                    <h3>En Attente</h3>
                    <div class="value" style="color: #007bff;">
                        <%= enAttente %>
                    </div>
                </div>
                <div class="stat-card premium">
                    <h3>Premium</h3>
                    <div class="value" style="color: #b8860b;">
                        <%= premiums %>
                    </div>
                </div>
            </div>

            <div class="controls">
                <div class="search-box">
                    <input type="text" id="admin-search" placeholder="Rechercher par nom, email..."
                        onkeyup="filterEleves()">
                </div>
                <div class="filter-box">
                    <select id="admin-filter" onchange="filterEleves()">
                        <option value="all">Tous les comptes</option>
                        <option value="premium">Premium üëë</option>
                        <option value="attente_premium">En attente Premium ‚è≥</option>
                        <option value="non_verifie">Non v√©rifi√©s</option>
                        <option value="basic">Basic</option>
                    </select>
                </div>
            </div>

            <table>
                <thead>
                    <tr>
                        <td>√âl√®ve</td>
                        <td>Email</td>
                        <td>Statut</td>
                        <td>Actions</td>
                    </tr>
                </thead>
                <tbody id="eleves-table-body">
                    <% const sortedEleves=[...eleves].sort((a, b)=> {
                        const aEnAttente = (a.role !== 'premium' && a.premiumRequest) ? 1 : 0;
                        const bEnAttente = (b.role !== 'premium' && b.premiumRequest) ? 1 : 0;
                        if (aEnAttente !== bEnAttente) return bEnAttente - aEnAttente;
                        if (a.role === 'premium' && b.role !== 'premium') return -1;
                        if (a.role !== 'premium' && b.role === 'premium') return 1;
                        return 0;
                        });

                        sortedEleves.forEach((elv) => {
                        const estPremium = elv.role === 'premium';
                        const estAttentePremium = elv.role === 'attente_premium';
                        const estNonVerifie = elv.role === 'non_verifie';
                        let classeRangee = '';
                        if (estPremium) classeRangee = 'premium-row';
                        if (estAttentePremium) classeRangee = 'waiting-row';

                        let badgeStatut = '<span class="badge badge-basic">Basic</span>';
                        let typeStatut = 'basic';
                        if (estPremium) {
                            badgeStatut = '<span class="badge badge-premium">Premium üëë</span>';
                            typeStatut = 'premium';
                        } else if (estAttentePremium) {
                            badgeStatut = '<span class="badge badge-attente-premium">En attente Premium ‚è≥</span>';
                            typeStatut = 'attente_premium';
                        } else if (estNonVerifie) {
                            badgeStatut = '<span class="badge badge-non-verifie">√Ä v√©rifier üìß</span>';
                            typeStatut = 'non_verifie';
                        }

                        const elvData = JSON.stringify(elv).replace(/'/g, "&#39;");
                        %>
                        <tr class="<%= classeRangee %>"
                            data-search="<%= (elv.nom + ' ' + elv.prenom + ' ' + elv.email).toLowerCase() %>"
                            data-role="<%= typeStatut %>">
                            <td>
                                <strong>
                                    <%= elv.nom %>
                                </strong>
                                <%= elv.prenom %>
                            </td>
                            <td>
                                <%= elv.email %>
                            </td>
                            <td><%- badgeStatut %></td>
                            <td class="actions-cell">
                                <button class="btn-icon btn-details" data-elv='<%- elvData %>'
                                    onclick="showMore(JSON.parse(this.dataset.elv))">
                                    <img src="/client/assets/img/more.png" alt="Plus">
                                </button>
                                <button class="btn-icon btn-delete"
                                    onclick="confirmDelete('<%= elv.token %>', '<%= elv.nom %> <%= elv.prenom %>', this.closest('tr'))">
                                    <svg viewBox="0 0 24 24" width="20" height="20">
                                        <path
                                            d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z" />
                                    </svg>
                                </button>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
            <div id="empty-results">Aucun √©l√®ve ne correspond √† votre recherche.</div>
    </div>

    <script>
        const baseUrl = 'http://localhost:3000';

        function filterEleves() {
            const query = document.getElementById('admin-search').value.toLowerCase();
            const filter = document.getElementById('admin-filter').value;
            const rows = document.querySelectorAll('#eleves-table-body tr');
            let visibleCount = 0;

            rows.forEach(row => {
                const searchText = row.getAttribute('data-search');
                const role = row.getAttribute('data-role');

                const matchesSearch = searchText.includes(query);
                const matchesFilter = filter === 'all' || role === filter;

                if (matchesSearch && matchesFilter) {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });

            document.getElementById('empty-results').style.display = visibleCount === 0 ? 'block' : 'none';
        }

        function showMore(elv) {
            // Remove any existing modal
            const existing = document.querySelector('.menu-more');
            if (existing) existing.remove();

            const modal = document.createElement('div');
            modal.className = 'menu-more';
            modal.innerHTML = `
                <div class="menu-more-close" onclick="this.parentElement.remove()">‚úï</div>
                <div class="details">
                    <h2>D√©tails √âl√®ve</h2>
                    <div style="font-weight:bold">${elv.nom} ${elv.prenom}</div>
                    <div style="color:#666; font-size:0.9rem">${elv.email}</div>
                    <div style="margin:5px 0; font-size:0.8rem">Tel: ${elv.tel || 'N/A'}</div>
                    <hr style="border:none; border-top:1px solid #eee; margin:15px 0;"/>
                    
                    ${elv.premiumRequest ? `
                        <div class="premium-details">
                            <div style="font-size:0.8rem; color: #888;">Demande re√ßue le : ${new Date(elv.premiumRequest.date).toLocaleDateString()}</div>
                            <div style="margin:10px 0;"><strong>Re√ßu n¬∞:</strong> ${elv.premiumRequest.numeroRecu}</div>
                            <img src="${baseUrl + elv.premiumRequest.imageRecu}" class="show-img" alt="Recu">
                            ${elv.role !== 'premium' ? `
                                <div class="devenir-premium" onclick="validerPremium('${elv.token}', this)">V√©rifier et Valider</div>
                            ` : '<div style="text-align:center; color: #daa520; font-weight:bold;">‚ú® COMPTE PREMIUM</div>'}
                        </div>
                    ` : '<p style="text-align:center; color:#999;">Pas de demande Premium.</p>'}
                </div>
            `;
            document.body.appendChild(modal);
        }

        async function validerPremium(token, btn) {
            if (!confirm('Activer le compte PREMIUM pour cet √©l√®ve ?')) return;

            btn.innerText = 'Activation...';
            btn.style.pointerEvents = 'none';

            try {
                const res = await fetch(`${baseUrl}/valider-premium`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ token })
                });
                const result = await res.json();
                if (result.success) {
                    alert(result.message);
                    location.reload();
                } else {
                    alert(result.message);
                    btn.innerText = 'V√©rifier et Valider';
                    btn.style.pointerEvents = 'auto';
                }
            } catch (err) {
                alert('Erreur de connexion');
                btn.innerText = 'V√©rifier et Valider';
                btn.style.pointerEvents = 'auto';
            }
        }

        async function confirmDelete(token, name, row) {
            if (!confirm(`Supprimer d√©finitivement l'√©l√®ve ${name} ?`)) return;

            try {
                const res = await fetch(`${baseUrl}/annuler-compte`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ token })
                });
                const result = await res.json();
                if (result.success) {
                    row.style.opacity = '0';
                    setTimeout(() => row.remove(), 300);
                } else {
                    alert(result.message || 'Erreur lors de la suppression');
                }
            } catch (err) {
                alert('Erreur serveur');
            }
        }
    </script>
</body>

</html>